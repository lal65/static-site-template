{% if page_image %}
  {% set image %}
    <picture>
      <source srcset="{{ base_path ? '/' ~ base_path }}/images/{{ page_image }}@1920x1280.webp 1x" media="(min-width:1280px)" type="image/webp" width="1920" height="840">
      <source srcset="{{ base_path ? '/' ~ base_path }}/images/{{ page_image }}@1280x720.webp 1x" media="(min-width:768px)" type="image/webp" width="1280" height="560">
      <source srcset="{{ base_path ? '/' ~ base_path }}/images/{{ page_image }}@768x432.webp 1x" media="(max-width:767px)" type="image/webp" width="768" height="432">
      <img loading="eager" src="{{ base_path ? '/' ~ base_path }}/images/{{ page_image }}@768x432.webp" alt="Pillars">
    </picture>
  {% endset %}
  {% include '@psu-ooe/page-title-banner-image/page-title-banner-image.twig' with {
    subtitle_before: page_subtitle_before,
    title: page_title,
    subtitle_after: page_subtitle_after,
    image: image
  } only %}
{% else %}
  {% include '@psu-ooe/page-title-banner-plain/page-title-banner-plain.twig' with {
    subtitle_before: page_subtitle_before,
    title: page_title,
    subtitle_after: page_subtitle_after,
  } only %}
{% endif %}